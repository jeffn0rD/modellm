{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "label", "category", "description", "producer", "consumer", "payload", "constraints", "justification"],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^MSG\\d+$"
      },
      "label": {
        "type": "string",
        "minLength": 1
      },
      "category": {
        "type": "string",
        "enum": ["request", "command", "response", "event"]
      },
      "description": {
        "type": "string",
        "minLength": 1
      },
      "producer": {
        "type": "string",
        "pattern": "^A\\d+$"
      },
      "consumer": {
        "type": "string",
        "pattern": "^A\\d+$"
      },
      "payload": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["id", "label", "refConceptId", "constraint", "notes", "isNew"],
          "properties": {
            "id": {
              "type": "string",
              "minLength": 1
            },
            "label": {
              "type": "string",
              "minLength": 1
            },
            "refConceptId": {
              "oneOf": [
                {
                  "type": "string",
                  "pattern": "^(A|ACT|DE)\\d+$"
                },
                {
                  "type": "null"
                }
              ]
            },
            "constraint": {
              "type": "string"
            },
            "notes": {
              "type": "string"
            },
            "isNew": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        }
      },
      "constraints": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["id", "label", "constraint", "notes", "isNew"],
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^C-MSG\\d+-\\d+$"
            },
            "label": {
              "type": "string",
              "minLength": 1
            },
            "constraint": {
              "type": "string",
              "minLength": 1
            },
            "notes": {
              "type": "string"
            },
            "isNew": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        }
      },
      "justification": {
        "type": "string",
        "minLength": 1
      },
      "anchors": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^AN\\d+$"
        },
        "default": []
      }
    },
    "additionalProperties": false
  }
}
