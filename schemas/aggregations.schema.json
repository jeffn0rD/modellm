{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "label", "members", "description", "justification"],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^AG\\d+$"
      },
      "label": {
        "type": "string",
        "minLength": 1
      },
      "category": {
        "type": "string",
        "enum": ["lifecycle", "view", "service", "feature", "future"]
      },
      "members": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^(A|ACT|DE|AG)\\d+$"
        },
        "minItems": 1
      },
      "description": {
        "type": "string",
        "minLength": 1
      },
      "justification": {
        "type": "string",
        "minLength": 1
      },
      "anchors": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^AN\\d+$"
        },
        "default": []
      }
    },
    "additionalProperties": false
  }
}
