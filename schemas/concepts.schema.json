{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["type", "id", "label", "description"],
    "properties": {
      "type": {
        "type": "string",
        "enum": ["Actor", "Action", "DataEntity"]
      },
      "id": {
        "type": "string",
        "pattern": "^(A|ACT|DE)\\d+$"
      },
      "label": {
        "type": "string",
        "minLength": 1
      },
      "categories": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": []
      },
      "description": {
        "type": "string",
        "minLength": 1
      },
      "justification": {
        "type": "string",
        "minLength": 1
      },
      "anchors": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^AN\\d+$"
        },
        "default": []
      },
      "sourceConceptIds": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": []
      }
    },
    "additionalProperties": false
  }
}
