{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "label", "category", "members", "description", "justification"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^MAG\\d+$"
    },
    "label": {
      "type": "string",
      "minLength": 1
    },
    "category": {
      "type": "string",
      "enum": ["response-group", "event-group", "command-group", "query-group"]
    },
    "members": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^MSG\\d+$"
      },
      "minItems": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "justification": {
      "type": "string",
      "minLength": 1
    },
    "anchors": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^AN\\d+$"
      },
      "default": []
    }
  },
  "additionalProperties": false
}
